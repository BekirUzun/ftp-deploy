{
  "name": "@samkirkland/ftp-deploy",
  "version": "0.9.5",
  "private": false,
  "description": "Deploy files to a ftp server",
  "main": "./dist/module/module.js",
  "bin": {
    "ftp-deploy": "./dist/cli/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "deploy": "tsc && node ./lib/cli.js --server wwwssr16.supercp.com --protocol ftps --secure strict --username \"ftp-deploy@samkirkland.com\" --password \"actualPasswordHere\" --exclude lib/** --exclude dist/** --exclude .git* --exclude .git*/** --exclude node_modules/** --exclude node_modules/**/*",
    "run": "ts-node-dev --respawn -- ./lib/main.js --ftp-server=test",
    "lint": "eslint src/**/*.ts",
    "pack": "npm run pack-module && npm run pack-cli",
    "pack-module": "ncc build src/module.ts --out dist/module/",
    "pack-cli": "ncc build src/cli.ts --out dist/cli/",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SamKirkland/ftp-deploy.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "Sam Kirkland",
  "license": "MIT",
  "dependencies": {
    "basic-ftp": "^4.6.2",
    "lodash": "^4.17.20",
    "multimatch": "^4.0.0",
    "pretty-bytes": "^5.4.1",
    "pretty-ms": "^7.0.0",
    "readdir-enhanced": "^6.0.4",
    "yargs": "^15.4.1"
  },
  "devDependencies": {
    "@types/jest": "^26.0.13",
    "@types/lodash": "^4.14.161",
    "@types/minimatch": "^3.0.3",
    "@types/node": "^14.6.4",
    "@types/yargs": "^15.0.5",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "@vercel/ncc": "^0.24.0",
    "eslint": "^7.8.1",
    "eslint-plugin-jest": "^24.0.0",
    "jest": "^26.4.2",
    "js-yaml": "^3.14.0",
    "ts-jest": "^26.3.0",
    "ts-node-dev": "^1.0.0-pre.62",
    "typescript": "^4.0.2"
  },
  "bugs": {
    "url": "https://github.com/SamKirkland/ftp-deploy/issues"
  },
  "homepage": "https://github.com/SamKirkland/ftp-deploy",
  "files": [
    "dist"
  ]
}
